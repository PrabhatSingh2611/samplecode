<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

        <changeSet id="r.0.0.1" author="rshtepa">
            <sql>CREATE TYPE EMPLOYEE_ROLE AS ENUM ('ADMIN', 'EMPLOYEE');</sql>
            <sql>CREATE TYPE LEAVE_REQUEST_STATUS AS ENUM ('NEW', 'REQUESTED', 'IN_PROGRESS', 'ON_HOLD', 'APPROVED', 'NOT_APPROVED');</sql>
            <sql>CREATE TYPE ASSET_REQUEST_STATUS AS ENUM ('NEW', 'REQUESTED', 'IN_PROGRESS', 'ON_HOLD', 'APPROVED', 'NOT_APPROVED');</sql>
        </changeSet>
    <changeSet id="r.0.0.2" author="rshtepa">
        <createTable tableName="employee_position">
            <column name="id" type="INT8">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(250)"/>
        </createTable>
        <createTable tableName="employee_location">
            <column name="id" type="INT8">
                <constraints primaryKey="true"/>
            </column>
            <column name="name" type="VARCHAR(250)"/>
        </createTable>
        <createTable tableName="employee">
            <column name="id" type="INT8">
                <constraints primaryKey="true"/>
            </column>
            <column name="uuid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)"/>
            <column name="last_name" type="VARCHAR(100)"/>
            <column name="role" type="EMPLOYEE_ROLE"/>
            <column name="birthday" type="timestamptz"/>
            <column name="position_id" type="INT8">
               <constraints foreignKeyName="fk_employee2position" references="employee_position(id)"/>
            </column>
            <column name="location_id" type="INT8">
                <constraints foreignKeyName="fk_employee2location" references="employee_location(id)"/>
            </column>
        </createTable>
        <createTable tableName="asset_type">
            <column name="id" type="INT8">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(100)"/>
            <column name="icon" type="VARCHAR(100)"/>
        </createTable>
        <createTable tableName="asset">
            <column name="id" type="INT8">
                <constraints primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(100)"/>
            <column name="serial_number" type="VARCHAR(100)"/>
            <column name="asset_type_id" type="INT8">
                <constraints foreignKeyName="fk_asset2type" references="asset_type(id)"/>
            </column>
            <column name="employee_id" type="INT8">
                <constraints foreignKeyName="fk_asset2employee" references="employee(id)"/>
            </column>
            <column name="archived_date" type="timestamptz"/>
            <column name="purchased_date" type="timestamptz"/>
        </createTable>
        <createTable tableName="asset_request">
            <column name="id" type="INT8">
                <constraints primaryKey="true"/>
            </column>
            <column name="request_date" type="timestamptz"/>
            <column name="employee_id" type="INT8">
                <constraints foreignKeyName="fk_asset_request2employee" references="employee(id)"/>
            </column>
            <column name="asset_id" type="INT8">
                <constraints foreignKeyName="fk_asset_request2asset" references="asset(id)"/>
            </column>
            <column name="status" type="ASSET_REQUEST_STATUS"/>
            <column name="comment" type="VARCHAR(250)"/>
        </createTable>
        <createTable tableName="leave_request">
            <column name="id" type="INT8">
                <constraints primaryKey="true"/>
            </column>
            <column name="request_date" type="timestamptz"/>
            <column name="employee_id" type="INT8">
                <constraints foreignKeyName="fk_leave_request2employee" references="employee(id)"/>
            </column>
            <column name="status" type="LEAVE_REQUEST_STATUS"/>
            <column name="start_date" type="timestamptz"/>
            <column name="end_date" type="timestamptz"/>
            <column name="comment" type="VARCHAR(250)"/>
        </createTable>
    </changeSet>
    <changeSet id="r.0.0.3" author="rshtepa">
    <sql>
        insert into asset_type (id, title, icon) values (1,'Laptops','');
        insert into asset_type (id, title, icon) values (2,'Monitors','');
        insert into asset_type (id, title, icon) values (3,'Accesories','');
        
        insert into asset (id, title, serial_number, asset_type_id, employee_id, archived_date, purchased_date)
        values (1,'Macbook Pro 13','ABC',1,null,null,now());
        insert into asset (id, title, serial_number, asset_type_id, employee_id, archived_date, purchased_date)
        values (2,'Dell Latitude 15','ABC1',1,null,null,now());
        insert into asset (id, title, serial_number, asset_type_id, employee_id, archived_date, purchased_date)
        values (3,'Lenovo Laptop 14','ABC2',1,null,null,now());
        insert into asset (id, title, serial_number, asset_type_id, employee_id, archived_date, purchased_date)
        values (4,'Dell Latitude 13','ABC3',1,null,null,now());
        insert into asset (id, title, serial_number, asset_type_id, employee_id, archived_date, purchased_date)
        values (5,'Dell Monitor 24','ABC5',2,null,null,now());
                
    </sql>
    </changeSet>

    <changeSet id="r.0.0.4" author="tetiana.hladka">
        <addColumn tableName="asset_type">
            <column name="uuid" type="UUID"/>
        </addColumn>
        <addColumn tableName="asset">
            <column name="uuid" type="UUID"/>
        </addColumn>
        <sql>
            CREATE EXTENSION IF NOT EXISTS "uuid-ossp";
            UPDATE asset_type SET uuid = uuid_generate_v4();
            UPDATE asset SET uuid = uuid_generate_v4();
        </sql>
        <addNotNullConstraint tableName="asset_type" columnName="uuid"/>
        <addNotNullConstraint tableName="asset" columnName="uuid"/>
        <addUniqueConstraint tableName="asset_type" columnNames="uuid"/>
        <addUniqueConstraint tableName="asset" columnNames="uuid"/>
    </changeSet>
    
</databaseChangeLog>
